  <p><label for="ship_booty_1">Ship Booty:</label><input type="text" id="ship_booty_1" name="ship[booty]"></p>

  <h3>Second Ship</h3>

  <p><label for="ship_name_2">Ship Name:</label><input type="text" id="ship_name_2" name="ship[name]"></p>
  <p><label for="ship_type_2">Ship Type:</label><input type="text" id="ship_type_2" name="ship[type]"></p>
  <p><label for="ship_booty_2">Ship Booty:</label><input type="text" id="ship_booty_2" name="ship[booty]"></p>

  <input type="submit">
</form>
